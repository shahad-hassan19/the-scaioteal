<div class="flex flex-col items-center my-8">
    {% form 'contact' %}
        {% if form.errors %}
            <div class="border border-red-500 p-5 my-8">
                <div class="flex flex-row items-center w-full my-3">
                    <div class="text-red-500">
                        {% render 'icon-failed' %}
                    </div>
                    <div class="text-sm font-medium ml-3">
                        Oh no! Your message is not sent.
                    </div>
                </div>
                <ul class="px-4 mb-3 ml-7 list-decimal">
                    {% for error in form.errors %}
                        <li>
                            <span> {{ form.errors.messages[error] }} </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% elsif form.posted_successfully? %}
            <div class="flex flex-row items-center w-full p-5 my-5">
                <div class="text-green-500">
                    {% render 'icon-success' %}
                </div>
                <div class="text-sm font-medium ml-3">
                    Message sent successfully.
                </div>
            </div>
        {% endif %}
        <div class="max-w-6xl mx-auto flex flex-col items-center justify-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email Address</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email">
                </div>
            </div>
            <div class="w-full px-1 mb-3">
                <div class="w-full px-3">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message</label>
                    <textarea class="border py-3 px-4 mb-3 text-gray-700 w-full resize-none" name="contact[body]" id="contact_message"></textarea>
                </div>
            </div>
            <div class="w-full px-1 mb-3">
                <div class="w-full px-3">
                    <input type="submit" value="Submit" class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700">
                </div>
            </div>
        </div>
    {% endform %}
</div>

{% schema %}
    {
        "name": "Contact Form",
        "presets": [
            {
                "name": "Contact Form"
            }
        ]
    }
{% endschema %}